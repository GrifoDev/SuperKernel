# By UpInTheAir for SkyHigh kernels

# Busybox 
if [ -e /su/xbin/busybox ]; then
	BB=/su/xbin/busybox;
else if [ -e /sbin/busybox ]; then
	BB=/sbin/busybox;
else
	BB=/system/xbin/busybox;
fi;
fi;

if [ "$($BB mount | grep rootfs | cut -c 26-27 | grep -c ro)" -eq "1" ]; then
	$BB mount -o remount,rw /;
fi;
if [ "$($BB mount | grep system | grep -c ro)" -eq "1" ]; then
	$BB mount -o remount,rw /system;
fi;

case $1 in

doze_idle_mode)
  P=/res/synapse/Super/doze_idle_mode;

  if [ ! -z "$2" ]; then
	if [ "$2" == Disabled ]; then
		echo "0" > $P;
		$BB sync;
		dumpsys deviceidle disable
		dumpsys battery reset
	elif [ "$2" == Enabled ]; then
		echo "1" > $P;
		$BB sync;
		dumpsys deviceidle enable
		dumpsys battery reset
	fi;
  fi;

  copy=$(cat $P);
  if [ "$copy" == 0 ]; then
	echo Disabled
  elif [ "$copy" == 1 ]; then
	echo Enabled
  fi;
  ;;

doze_profile)
  P=/res/synapse/Super/doze_profile;

  if [ ! -z "$2" ]; then
	if [ "$2" == Stock ]; then
		echo "0" > $P;
		echo "30" > /res/synapse/Super/doze_inactive_to;
		echo "4" > /res/synapse/Super/doze_sensing_to;
		echo "30" > /res/synapse/Super/doze_locating_to;
		echo "20" > /res/synapse/Super/doze_location_accuracy;
		echo "10" > /res/synapse/Super/doze_motion_inactive_to;
		echo "30" > /res/synapse/Super/doze_idle_after_inactive_to;
		echo "5" > /res/synapse/Super/doze_idle_pending_to;
		echo "10" > /res/synapse/Super/doze_max_idle_pending_to;
		echo "2" > /res/synapse/Super/doze_idle_pending_factor;
		echo "60" > /res/synapse/Super/doze_idle_to;
		echo "6" > /res/synapse/Super/doze_max_idle_to;
		echo "2" > /res/synapse/Super/doze_idle_factor;
		echo "60" > /res/synapse/Super/doze_min_time_to_alarm;
		echo "5" > /res/synapse/Super/doze_max_temp_app_whitelist_duration;
		echo "60" > /res/synapse/Super/doze_mms_temp_app_whitelist_duration;
		echo "20" > /res/synapse/Super/doze_sms_temp_app_whitelist_duration;
		$BB sh /res/synapse/actions/doze_apply > /dev/null 2>&1;
	elif [ "$2" == Battery ]; then
		echo "1" > $P;
		echo "10" > /res/synapse/Super/doze_inactive_to;
		echo "0" > /res/synapse/Super/doze_sensing_to;
		echo "0" > /res/synapse/Super/doze_locating_to;
		echo "50" > /res/synapse/Super/doze_location_accuracy;
		echo "0" > /res/synapse/Super/doze_motion_inactive_to;
		echo "0" > /res/synapse/Super/doze_idle_after_inactive_to;
		echo "2" > /res/synapse/Super/doze_idle_pending_to;
		echo "2" > /res/synapse/Super/doze_max_idle_pending_to;
		echo "2" > /res/synapse/Super/doze_idle_pending_factor;
		echo "30" > /res/synapse/Super/doze_idle_to;
		echo "6" > /res/synapse/Super/doze_max_idle_to;
		echo "2" > /res/synapse/Super/doze_idle_factor;
		echo "60" > /res/synapse/Super/doze_min_time_to_alarm;
		echo "5" > /res/synapse/Super/doze_max_temp_app_whitelist_duration;
		echo "60" > /res/synapse/Super/doze_mms_temp_app_whitelist_duration;
		echo "20" > /res/synapse/Super/doze_sms_temp_app_whitelist_duration;
		$BB sh /res/synapse/actions/doze_apply > /dev/null 2>&1;
	elif [ "$2" == User ]; then
		# Nothing to do here
		echo "2" > $P;
	fi;
  fi;

  copy=$(cat $P);
  if [ "$copy" == 0 ]; then
	echo Stock
  elif [ "$copy" == 1 ]; then
	echo Battery
  elif [ "$copy" == 2 ]; then
	echo User
  fi;
  ;;

esac;

if [ -f "$1" ]; then
	if [[ ! -z "$2" ]]; then
		$BB echo "$2" > "$1"
	fi;

	$BB echo "$($BB cat "$1")";
fi;
